{
  "compilerOptions": {
    "rootDir": "./src",

    "outDir": "./dist",

    // Environment / module system
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["esnext"],
    "types": ["node"],

    // Outputs
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Module / JSX settings
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
